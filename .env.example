# Copy this file to .env and adjust for your environment.

# Either set a full URL or individual params (URL takes precedence if set)
# QUIZ_DATABASE_URL=postgresql+asyncpg://user:pass@host:5432/dbname

QUIZ_DB_HOST=localhost
QUIZ_DB_PORT=5432
QUIZ_DB_NAME=christmas_quiz
QUIZ_DB_USER=postgres
QUIZ_DB_PASSWORD=postgres

# Allowed CORS origins (comma-separated). Leave "*" for open during development.
QUIZ_CORS_ORIGINS=*

# Optional: OpenAI settings for text answer evaluation
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TIMEOUT=5
